<% provide(:title, 'Operations detail') %>

<div class="col-sm-2 col-md-3 col-lg-4">
</div>

<div class="col-xs-12 col-sm-8 col-md-6 col-lg-4">
  <label>Date:</label>
  <div class="well">
    <%= @operation.date %>
  </div>

  <label>Value:</label>
  <div class="well">
    <%= @operation.credit ? '+' : '-' %>
    <%= @operation.value %>
  </div>



  <label>Tag:</label>
  <div class="well">
    <%= @operation.tag %>
  </div>

  <label>Comment:</label>
  <div class="well">
    <%= wrap(@operation.comment) %>
  </div>

  <%= link_to "Close", 'javascript:history.back()', onclick: 'window.close();', class: "btn btn-default" %>
  <%= link_to "Edit", edit_operation_path(@operation), class: "btn btn-warning" %>
  <%= link_to "Delete", @operation, method: :delete, data: { confirm: "You sure?" }, class: "btn btn-danger" %>
</div>

<div class="col-sm-2 col-md-3 col-lg-4">
</div>